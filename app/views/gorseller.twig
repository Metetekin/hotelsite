{% include 'header.twig' %}

<div class="page-banner-area">
    <div class="container">
        <div class="page-banner-content">
            <h2>Görseller</h2>
            <ul class="pages-list">
                    <li><a href="/">Galeri</a></li>
                <li>Görseller</li>
            </ul>
        </div>
    </div>
</div>



<section class="gallery-area pt-100 pb-100">
   <div class="container">
      <div class="section-title">
         <span class="sub-title">
         <i class="flaticon-hashtag-symbol"></i>
         Galeri
         </span>
         <h2>Güzel Gülüşler Yaratıyoruz</h2>
         <p>İstanbul'un merkezi Fulya’da sağlıklı dişlere ve mükemmel bir gülüşe kavuşacağınız bir diş sağlığı merkezi kurduk.</p>
      </div>
      <div class="row">

        {% for file in fileList %}  
         <div class="col-lg-6">
      
        
         <div class="single-gallery">
   <img src="{{ file['file_url'] }}" alt="image">
   <div class="content">
      <h3>
         <a href="iletisim">{{ file['file_name'] }}</a>
      </h3>
      <span>Bize Ulaşın</span>
      <div class="icon">
         <a href="iletisim"><i class="flaticon-right-arrow"></i></a>
      </div>
   </div>
</div>
          </div>
         
        {% endfor %} 
        

      </div>
   </div>
</section>

