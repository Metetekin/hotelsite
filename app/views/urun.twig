{% include 'header.twig' %}

<section class="beautypress-inner-welocme-section beautypress-bg" style="background-image: url(img/inner-section-bg.jpg);">
   <div class="beautypress-black-overlay"></div>
   <div class="container">
      <div class="beautypress-inner-welcome-content">
         <img src="img/inner-welcome-icon.png" alt="">
         <h1 class="color-white">{{ product["product_name"] }}</h1>
         <p class="color-white">Sandra Epilasyon, her zaman güleryüzlü ve alanlarında uzman çalışanlarıyla kaliteli hizmetler vermek, müşterilerine hijyenik bir ortamda çeşitli uygulamalar sunarak uzun soluklu ilişkiler kurmayı amaç edinmiştir.</p>
      </div>
      <div class="beautypress-inner-welcome-footer-content">
         <ul class="beautypress-breadcrumb">
            <li><a href="">Ana sayfa</a></li>
            <li><a href="">{{ product["product_name"] }}</a></li>
         </ul>
      </div>
   </div>
</section>
<div class="beautypress-shop-single-page section-padding product">
   <div class="container">
      <div class="row">
         <div class="col-md-6 col-sm-12 col-lg-7">
            <div class="beautypress-sync-slider-wraper">
               <div id="sync1" class="beautypress-sync-slider-preview beautypress-version-2 owl-carousel">
                  <div class="beautypress-sync-preview">
                     <img src="{{ product['product_image'] }}" alt="">
                  </div>

               </div>
             
            </div>
            <div class="woocommerce-tabs beautypress-woocommerce-tabs wc-tabs-wrapper">
               <ul class="nav nav-tabs">
                  <li class="active beautypress-tab"><a data-toggle="tab" aria-expanded="true" href="#description">Ürün Detayı</a></li>
             </ul>
              
               <div class="tab-content woocommerce-Tabs-panel woocommerce-Tabs-panel--description panel entry-content wc-tab">
                  <div id="description" class="tab-pane fade in active woocommerce-Tabs-panel woocommerce-Tabs-panel--reviews panel entry-content wc-tab">

{{ product["product_content"] }}

                  </div>
               </div>
            </div>
         </div>
         <div class="col-md-6 col-sm-12 col-lg-5">
            <div class="beautypress-single-details">
               <h2 style="margin: 0 0 15px;
    color: var(--color-semi-black);
    font-weight: 600;
    letter-spacing: -2px;
    text-transform: capitalize;">{{ product["product_name"] }}</h2>
               <p>{{ product["product_desc"] }}</p>
            </div>
            <p class="price">
               <span class="woocommerce-Price-amount amount">
               Fiyat<span class="woocommerce-Price-currencySymbol">{{ product["product_price"] }}{{ currency }}</span>
               </span>
            </p>
            <div class="beautypress-add-to-chart-form">
                  <div class="w-quantity-btn">
                    <a href="odeme/{{ product['product_id'] }}">
                     <button type="submit" class="single_add_to_cart_button button alt" style="color:white;"><i class="fa fa-shopping-basket"></i> Ödeme Yap</button>
                    </a>  
                  </div>
            </div>
            <div class="beautypress-single-album-details-section">
               <ul class="beautypress-social-list beautypress-version-7">
                  <li><a href="{{ settings["facebook"] }}"><i class="fa fa-facebook"></i></a></li>
                  <li><a href="{{ settings["twitter"] }}"><i class="fa fa-twitter"></i></a></li>
                  <li><a href="{{ settings["instagram"] }}"><i class="fa fa-instagram"></i></a></li>
                  <li><a href="{{ settings["linkedin"] }}"><i class="fa fa-linkedin"></i></a></li>
               </ul>
            </div>
         </div>
      </div>
   </div>
</div>

{% include 'footer.twig' %}
