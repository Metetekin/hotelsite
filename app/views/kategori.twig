{% include 'header.twig' %}

<section class="beautypress-inner-welocme-section beautypress-bg parallax-bg" data-parallax="scroll" data-image-src="img/inner-section-bg.jpg">
   <div class="beautypress-black-overlay"></div>
   <div class="container">
      <div class="beautypress-inner-welcome-content">
         <img src="img/inner-welcome-icon.png" alt="">
         <h1 class="color-white">{{ category['category_name'] }}</h1>
         <p class="color-white">Sandra Epilasyon, her zaman güleryüzlü ve alanlarında uzman çalışanlarıyla kaliteli hizmetler vermek, müşterilerine hijyenik bir ortamda çeşitli uygulamalar sunarak uzun soluklu ilişkiler kurmayı amaç edinmiştir.</p>
      </div>
      <div class="beautypress-inner-welcome-footer-content">
         <ul class="beautypress-breadcrumb">
            <li><a href="">Ana Sayfa</a></li>
            <li><a href="">{{ category['category_name'] }}</a></li>
         </ul>
      </div>
   </div>
</section>

<section class="beautypress-exclusive-products section-padding">
   <div class="container">
      <div class="row mb-70">
          
        {% for product in productList %}  
         <div class="col-md-6 col-sm-12 col-lg-4 col-xl-4 mb-30">
            <div class="beautypress-product-group">
               <div class="beautypress-product-content">
                  <ul class="beautypress-rating">
                     <li><a href=""><i class="fa fa-star"></i></a></li>
                     <li><a href=""><i class="fa fa-star"></i></a></li>
                     <li><a href=""><i class="fa fa-star"></i></a></li>
                     <li><a href=""><i class="fa fa-star"></i></a></li>
                     <li><a href=""><i class="fa fa-star"></i></a></li>
                  </ul>
                  <div class="beautypress-product-details">
                     <h3>{{ product["product_name"] }}</h3>
                     <h4>{{ product["product_price"] }}{{ currency }}</h4>
                  </div>
                  <div class="beautypress-product-img">
                     <img src="{{ product["product_image"] }}" alt="">
                  </div>
               </div>
               <div class="beautypress-product-hover-elements">
                  <a href="urun/{{ product["product_url"] }}" class="beautypress-iocn-btn full-round-btn bg-color-green">
                  <i class="fa fa-search"></i>
                  </a>
                  <a href="urun/{{ product["product_url"] }}" class="beautypress-iocn-btn full-round-btn bg-color-green">
                  <i class="fa fa-shopping-basket"></i>
                  </a>
               </div>
            </div>
         </div>
        {% endfor %} 
  

   </div>
</section>

{% include 'footer.twig' %}
